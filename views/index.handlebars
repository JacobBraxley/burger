<div class="row">
    <ul class="col s12 m6">
    {{#each burgers}}
        {{#unless devoured}}
        <li>
	        {{burger_name}}<a class="munch" href="#" data-id="{{id}}"><i class="fas fa-hamburger"></i></a>
        </li>
        {{/unless}}
    {{/each}}
    </ul>
    <ul class="col s12 m6">
    {{#each burgers}}
        {{#if devoured}}
        <li>
	        {{burger_name}}<i class="far fa-sad-tear"></i>
        </li>
        {{/if}}
    {{/each}}
    </ul>
</div>

<div class="row">
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>